<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <link rel="apple-touch-icon" sizes="76x76" href="/Content/img/apple-icon.png" />
    <link rel="icon" type="image/png" href="/Content/img/favicon.png" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />

    <title>Vidly | Material Dashboard</title>

    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    @Styles.Render("~/Content/bootstrap")
    @Styles.Render("~/Content/material-dashboard")
    @Styles.Render("~/Content/demo")

    <link href="https://cdnjs.cloudflare.com/ajax/libs/material-design-lite/1.1.0/material.min.css" rel="stylesheet" />

    <!--     Fonts and icons     -->
    <link href="http://maxcdn.bootstrapcdn.com/font-awesome/latest/css/font-awesome.min.css" rel="stylesheet">
    <link href='http://fonts.googleapis.com/css?family=Roboto:400,700,300|Material+Icons' rel='stylesheet' type='text/css'>
</head>
<body>
    <div class="wrapper">

        @Html.Partial("_Sidebar")

        <div class="main-panel">
            @Html.Partial("_Navbar")

            <div class="content">
                @RenderBody()
            </div>

            @Html.Partial("_Footer")
        </div>
    </div>

    @Scripts.Render("~/bundles/core")
    @Scripts.Render("~/bundles/chartist")
    @Scripts.Render("~/bundles/bootstrap-notify")
    @Scripts.Render("~/bundles/material-dashboard")
    @Scripts.Render("~/bundles/demo")
    @RenderSection("Scripts", false)
</body>
</html>
